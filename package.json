{
  "name": "jeopardy-server",
  "version": "0.1.0",
  "description": "Server for game Jeopardy",
  "main": "index.js",
  "author": "Ilya Kurganskiy",
  "license": "MIT",
  "private": true,
  "scripts": {
    "docker-watch-server": "docker-compose -f docker/docker-compose.yml up",
    "docker-stop": "docker-compose -f docker/docker-compose.yml down",
    "docker-exec": "docker-compose -f docker/docker-compose.yml exec",
    "watch-server": "nodemon --watch src/**/*.ts --exec ts-node -L ./src/server.ts",
    "typeorm": "ts-node ./node_modules/.bin/typeorm",
    "lint:write": "eslint --debug src/ --fix",
    "prettier": "prettier --write src/**/*.js",
    "build": "tsc"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^25.2.1",
    "@types/jsonwebtoken": "^8.3.9",
    "@types/node": "^13.11.1",
    "@types/xml2json": "^0.11.0",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.4",
    "jest": "^25.3.0",
    "lint-staged": "^10.1.3",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.4",
    "ts-jest": "^25.3.1",
    "ts-node": "^8.8.2",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "apollo-server-koa": "^2.14.2",
    "bcrypt": "^4.0.1",
    "graphql": "^14.6.0",
    "graphql-subscriptions": "^1.1.0",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.0.0",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^0.17.6",
    "typeorm": "^0.2.24",
    "xml2json": "^0.12.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --cache --fix",
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
